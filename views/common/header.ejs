<!-- ********************header section starts******************** -->
<div class="container-fluid" id="top">
  <nav style="height: 10vh" class="navbar navbar-expand-lg navbar-dark bg-info fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand p-2" href="/">Blogs</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasNavbar"
        aria-controls="offcanvasNavbar"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div
        class="offcanvas bg-dark offcanvas-end"
        tabindex="-1"
        id="offcanvasNavbar"
        aria-labelledby="offcanvasNavbarLabel"
      >
        <div class="offcanvas-header">
          <h5 class="offcanvas-title text-white" id="offcanvasNavbarLabel">
            Blogs
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="offcanvas"
            aria-label="Close"
          ></button>
        </div>
        <div class="offcanvas-body">
          <ul class="navbar-nav justify-content-end flex-grow-1 p-2 pe-5">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item me-5">
              <a class="nav-link" aria-current="page" href="/dashboard"
                >Dashboard</a
              >
            </li>
            <% if(!locals.session.loggedin) {%>
          <a style="font-size: 15px; " 
            type="button"
            id="signin"
            style="height: 45px"
            class="me-2 btn testbtn mt-1 btn-primary" href="/log_in"
          >
            Sign In
          </a>
          <%} else{ %>
          <a
            style="height: 36px; font-size: 15px;"
            href="/logout"
            class="mt-1 btn btn-danger"
            type="button"
            >Logout</a
          >
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</div>
<!-- ********************header section ends********************** -->
